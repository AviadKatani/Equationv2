<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="aviadapps.equationv2.SolutionActivity"
    android:weightSum="1"
    android:background="#A9A9A9">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Solution:"
        android:textColor="#003366"
        android:textSize="42dp"
        android:id="@+id/textView12"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is valid"
        android:textSize="18dp"
        android:id="@+id/validTV"
        android:layout_gravity="center_horizontal" />


    <WebView
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x1: "
        android:textSize="18dp"
        android:id="@+id/solutionTV"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/solution2TV"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:text="x2: " />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1.00">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/resultView"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credits"
            android:textSize="16dp"
            android:id="@+id/creditTV"
            android:onClick="CreditsClicked"
            android:layout_gravity="bottom" />

        <TextView
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:text="                                                                         "
            android:id="@+id/spaceTV"
            android:layout_gravity="bottom" />

        <TextView
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:text="Main"
            android:textSize="16dp"
            android:id="@+id/mainTV"
            android:onClick="MainClicked"
            android:layout_gravity="bottom" />
    </LinearLayout>
</LinearLayout>
